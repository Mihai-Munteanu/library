<!-- Authors Table -->
<% if @authors.any? %>
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sortable_column(:name, "Name", authors_path) %>
            </th>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sortable_column(:nationality, "Nationality", authors_path) %>
            </th>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sortable_column(:birth_date, "Birth Date", authors_path) %>
            </th>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sortable_column(:death_date, "Death Date", authors_path) %>
            </th>
            <th class="px-4 sm:px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @authors.each do |author| %>
            <tr id="<%= dom_id(author) %>" class="hover:bg-gray-50 transition-colors">
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= author.name %></div>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= author.nationality || "N/A" %></div>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= author.birth_date || "N/A" %></div>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= author.death_date || "N/A" %></div>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex justify-end gap-2">
                  <%= link_to "Show", author_path(author),
                      class: "text-blue-600 hover:text-blue-900 hover:underline transition-colors" %>
                  <%= link_to "Edit", edit_author_path(author),
                      class: "text-green-600 hover:text-green-900 hover:underline transition-colors" %>
                  <%= link_to "Delete",
                      delete_confirmation_author_path(author) + "?from_page=index&return_to=#{CGI.escape(authors_index_url_with_filters)}",
                      data: { turbo_frame: "modal" },
                      class: "text-red-600 hover:text-red-900 hover:underline transition-colors" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <% if @pagy && @pagy.pages > 1 %>
    <div id="authors-pagination" class="mt-6 flex justify-center">
      <%== @pagy.series_nav %>
    </div>
  <% else %>
    <div id="authors-pagination"></div>
  <% end %>
<% else %>
  <!-- Empty State -->
  <div class="bg-white shadow-md rounded-lg px-6 py-12 text-center">
    <p class="text-gray-500 text-lg mb-4">No authors found.</p>
    <%= link_to "Create your first author", new_author_path,
        class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded transition-colors shadow-md hover:shadow-lg" %>
  </div>
  <div id="authors-pagination"></div>
<% end %>

