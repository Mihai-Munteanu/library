<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8">
  <!-- Header Section -->
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-6">
    <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900">Edit Author</h1>
    <div class="flex flex-col sm:flex-row gap-2">
      <%= link_to "Show", @author,
          class: "bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded text-center transition-colors" %>
      <%= link_to "Back", request.referer.presence || authors_path,
          class: "bg-gray-500 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded text-center transition-colors shadow-md hover:shadow-lg" %>
    </div>
  </div>

  <!-- Form Card -->
  <div class="bg-white shadow-md rounded-lg px-4 sm:px-6 lg:px-8 pt-6 pb-8">
    <%= render "form", author: @author %>
  </div>
</div>
