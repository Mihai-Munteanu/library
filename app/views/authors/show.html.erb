<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8">
  <!-- Header Section - Responsive -->
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-6">
    <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900"><%= @author.name %></h1>
    <div class="flex flex-col sm:flex-row gap-2 sm:gap-0">
      <%= link_to "Edit", edit_author_path(@author),
          class: "bg-green-500 hover:bg-green-700 text-white font-medium py-2 px-4 rounded text-center transition-colors sm:mr-2" %>
      <%= link_to "Back to Authors", authors_path,
          class: "bg-gray-500 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded text-center transition-colors" %>
    </div>
  </div>

  <!-- Author Details Card - Responsive Grid -->
  <div class="bg-white shadow-md rounded-lg px-4 sm:px-6 lg:px-8 pt-6 pb-8 mb-6">
    <dl class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
      <div class="sm:col-span-1">
        <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-1">Name</dt>
        <dd class="text-base sm:text-lg font-medium text-gray-900"><%= @author.name %></dd>
      </div>

      <div class="sm:col-span-1">
        <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-1">Nationality</dt>
        <dd class="text-base sm:text-lg text-gray-900"><%= @author.nationality || "N/A" %></dd>
      </div>

      <div class="sm:col-span-1">
        <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-1">Gender</dt>
        <dd class="text-base sm:text-lg text-gray-900"><%= @author.gender&.humanize || "N/A" %></dd>
      </div>

      <div class="sm:col-span-1">
        <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-1">Birth Date</dt>
        <dd class="text-base sm:text-lg text-gray-900"><%= @author.birth_date || "N/A" %></dd>
      </div>

      <div class="sm:col-span-1">
        <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-1">Death Date</dt>
        <dd class="text-base sm:text-lg text-gray-900"><%= @author.death_date || "N/A" %></dd>
      </div>

      <div class="sm:col-span-2 lg:col-span-3">
        <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Biography</dt>
        <dd class="text-base text-gray-900 leading-relaxed">
          <%= @author.biography.present? ? simple_format(@author.biography) : content_tag(:span, "No biography available.", class: "text-gray-400 italic") %>
        </dd>
      </div>
    </dl>
  </div>

  <!-- Metadata Section -->
  <% metadata = @author.metadata || {} %>
  <% if metadata.values.any?(&:present?) %>
    <div class="bg-white shadow-md rounded-lg px-4 sm:px-6 lg:px-8 pt-6 pb-8 mb-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Additional Information</h2>
      <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
        <% if metadata["website"].present? %>
          <div class="sm:col-span-1">
            <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-1">Website</dt>
            <dd class="text-base text-gray-900">
              <%= link_to metadata["website"], metadata["website"], target: "_blank", rel: "noopener noreferrer", class: "text-blue-600 hover:text-blue-800 hover:underline" %>
            </dd>
          </div>
        <% end %>

        <% if metadata["email"].present? %>
          <div class="sm:col-span-1">
            <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-1">Email</dt>
            <dd class="text-base text-gray-900">
              <%= mail_to metadata["email"], metadata["email"], class: "text-blue-600 hover:text-blue-800 hover:underline" %>
            </dd>
          </div>
        <% end %>

        <% if metadata["twitter"].present? %>
          <div class="sm:col-span-1">
            <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-1">Twitter</dt>
            <dd class="text-base text-gray-900">
              <%= link_to metadata["twitter"], "https://twitter.com/#{metadata["twitter"].gsub(/^@/, '')}", target: "_blank", rel: "noopener noreferrer", class: "text-blue-600 hover:text-blue-800 hover:underline" %>
            </dd>
          </div>
        <% end %>

        <% if metadata["facebook"].present? %>
          <div class="sm:col-span-1">
            <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-1">Facebook</dt>
            <dd class="text-base text-gray-900">
              <%= link_to metadata["facebook"], metadata["facebook"], target: "_blank", rel: "noopener noreferrer", class: "text-blue-600 hover:text-blue-800 hover:underline" %>
            </dd>
          </div>
        <% end %>

        <% if metadata["tags"].present? %>
          <div class="sm:col-span-1">
            <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-1">Tags</dt>
            <dd class="text-base text-gray-900">
              <% tags = metadata["tags"].is_a?(Array) ? metadata["tags"] : metadata["tags"].to_s.split(",").map(&:strip) %>
              <% tags.each do |tag| %>
                <span class="inline-block bg-gray-200 text-gray-800 text-sm px-2 py-1 rounded mr-2 mb-2"><%= tag.to_s.strip %></span>
              <% end %>
            </dd>
          </div>
        <% end %>

        <% if metadata["notes"].present? %>
          <div class="sm:col-span-2">
            <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Notes</dt>
            <dd class="text-base text-gray-900 leading-relaxed">
              <%= simple_format(metadata["notes"]) %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  <% end %>

  <!-- Books Section - Responsive Header -->
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-4">
    <h2 class="text-xl sm:text-2xl font-bold text-gray-900">Books by <%= @author.name %></h2>
    <%= link_to "Add New Book", new_book_path(author_id: @author.id),
        class: "bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded text-center transition-colors w-full sm:w-auto" %>
  </div>

  <!-- Books Table Frame -->
  <%= render "authors/books_table_frame" %>
</div>
