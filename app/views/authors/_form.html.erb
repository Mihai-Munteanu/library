<%= form_with(model: author, local: true) do |form| %>
  <% if author.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 text-red-700 p-4 rounded mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(author.errors.count, "error") %> prohibited this author from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% author.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Basic Information Section -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b border-gray-200">Basic Information</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
      <div class="md:col-span-2">
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" do %>
          Name <span class="text-red-500">*</span>
        <% end %>
        <% name_has_error = author.errors[:name].any? || (author.errors.any? && author.name.blank?) %>
        <%= form.text_field :name,
            class: "w-full px-3 py-2 border #{name_has_error ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if author.errors[:name].any? %>
          <p class="mt-1 text-sm text-red-600"><%= author.errors[:name].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :birth_date, class: "block text-sm font-medium text-gray-700 mb-2" do %>
          Birth Date <span class="text-red-500">*</span>
        <% end %>
        <% birth_date_has_error = author.errors[:birth_date].any? || (author.errors.any? && author.birth_date.blank?) %>
        <%= form.date_field :birth_date,
            class: "w-full px-3 py-2 border #{birth_date_has_error ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if author.errors[:birth_date].any? %>
          <p class="mt-1 text-sm text-red-600"><%= author.errors[:birth_date].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :death_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.date_field :death_date,
            class: "w-full px-3 py-2 border #{author.errors[:death_date].any? ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if author.errors[:death_date].any? %>
          <p class="mt-1 text-sm text-red-600"><%= author.errors[:death_date].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :nationality, class: "block text-sm font-medium text-gray-700 mb-2" do %>
          Nationality <span class="text-red-500">*</span>
        <% end %>
        <% nationality_has_error = author.errors[:nationality].any? || (author.errors.any? && author.nationality.blank?) %>
        <%= form.text_field :nationality,
            class: "w-full px-3 py-2 border #{nationality_has_error ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if author.errors[:nationality].any? %>
          <p class="mt-1 text-sm text-red-600"><%= author.errors[:nationality].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :gender, class: "block text-sm font-medium text-gray-700 mb-2" do %>
          Gender <span class="text-red-500">*</span>
        <% end %>
        <% gender_has_error = author.errors[:gender].any? || (author.errors.any? && author.gender.blank?) %>
        <%= form.select :gender,
            Author.genders.keys.map { |g| [g.humanize, g] },
            { prompt: "Select gender" },
            { class: "w-full px-3 py-2 border #{gender_has_error ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors bg-white" } %>
        <% if author.errors[:gender].any? %>
          <p class="mt-1 text-sm text-red-600"><%= author.errors[:gender].first %></p>
        <% end %>
      </div>

      <div class="md:col-span-2">
        <%= form.label :biography, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :biography, rows: 5,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <p class="mt-1 text-sm text-gray-500">Maximum 1000 characters</p>
      </div>
    </div>
  </div>

  <!-- Additional Information Section -->

  <!-- Metadata Section -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b border-gray-200">Metadata</h2>
    <% metadata = author.metadata || {} %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
      <div>
        <%= form.label :metadata_website, "Website", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= text_field_tag "author[metadata][website]", metadata["website"],
            placeholder: "https://example.com",
            maxlength: 500,
            class: "w-full px-3 py-2 border #{author.errors[:metadata].any? && author.errors[:metadata].any? { |e| e.include?('website') } ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if author.errors[:metadata].any? { |e| e.include?('website') } %>
          <p class="mt-1 text-sm text-red-600"><%= author.errors[:metadata].find { |e| e.include?('website') } %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :metadata_email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= email_field_tag "author[metadata][email]", metadata["email"],
            placeholder: "author@example.com",
            maxlength: 254,
            class: "w-full px-3 py-2 border #{author.errors[:metadata].any? && author.errors[:metadata].any? { |e| e.include?('email') } ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if author.errors[:metadata].any? { |e| e.include?('email') } %>
          <p class="mt-1 text-sm text-red-600"><%= author.errors[:metadata].find { |e| e.include?('email') } %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :metadata_twitter, "Twitter", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= text_field_tag "author[metadata][twitter]", metadata["twitter"],
            placeholder: "@username",
            maxlength: 200,
            class: "w-full px-3 py-2 border #{author.errors[:metadata].any? && author.errors[:metadata].any? { |e| e.include?('twitter') } ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if author.errors[:metadata].any? { |e| e.include?('twitter') } %>
          <p class="mt-1 text-sm text-red-600"><%= author.errors[:metadata].find { |e| e.include?('twitter') } %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :metadata_facebook, "Facebook", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= text_field_tag "author[metadata][facebook]", metadata["facebook"],
            placeholder: "https://facebook.com/username",
            maxlength: 500,
            class: "w-full px-3 py-2 border #{author.errors[:metadata].any? && author.errors[:metadata].any? { |e| e.include?('facebook') } ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if author.errors[:metadata].any? { |e| e.include?('facebook') } %>
          <p class="mt-1 text-sm text-red-600"><%= author.errors[:metadata].find { |e| e.include?('facebook') } %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :metadata_tags, "Tags", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <% tags_error = author.errors[:metadata].find { |e| e.include?('tag') || e.include?('tags') } %>
        <%= text_field_tag "author[metadata][tags]", metadata["tags"],
            placeholder: "fiction, mystery, thriller",
            maxlength: 1500,
            class: "w-full px-3 py-2 border #{tags_error ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if tags_error %>
          <p class="mt-1 text-sm text-red-600"><%= tags_error %></p>
        <% else %>
          <p class="mt-1 text-sm text-gray-500">Separate tags with commas (max 20 tags, 50 chars each)</p>
        <% end %>
      </div>

      <div class="md:col-span-2">
        <%= form.label :metadata_notes, "Notes", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= text_area_tag "author[metadata][notes]", metadata["notes"], rows: 3,
            placeholder: "Additional notes about the author...",
            maxlength: 2000,
            class: "w-full px-3 py-2 border #{author.errors[:metadata].any? && author.errors[:metadata].any? { |e| e.include?('notes') } ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if author.errors[:metadata].any? { |e| e.include?('notes') } %>
          <p class="mt-1 text-sm text-red-600"><%= author.errors[:metadata].find { |e| e.include?('notes') } %></p>
        <% else %>
          <p class="mt-1 text-sm text-gray-500">Maximum 2000 characters</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex flex-col sm:flex-row items-center justify-between gap-4 pt-6 border-t border-gray-200">
    <p class="text-sm text-gray-500">
      <span class="text-red-500">*</span> Required fields
    </p>
    <div class="flex gap-3 w-full sm:w-auto">
      <%= back_button_with_fallback(authors_path, text: "Cancel", class: "w-full sm:w-auto") %>
      <%= form.submit class: "w-full sm:w-auto bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded transition-colors shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
    </div>
  </div>
<% end %>
