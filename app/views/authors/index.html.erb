<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Authors</h1>
    <%= link_to "New Author", new_author_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if @authors.any? %>
    <table class="min-w-full bg-white border border-gray-300">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-4 py-2 border-b">Name</th>
          <th class="px-4 py-2 border-b">Nationality</th>
          <th class="px-4 py-2 border-b">Birth Date</th>
          <th class="px-4 py-2 border-b">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @authors.each do |author| %>
          <tr id="author_<%= author.id %>">
            <td class="px-4 py-2 border-b"><%= author.name %></td>
            <td class="px-4 py-2 border-b"><%= author.nationality %></td>
            <td class="px-4 py-2 border-b"><%= author.birth_date %></td>
            <td class="px-4 py-2 border-b">
              <%= link_to "Show", author, class: "text-blue-500 hover:underline mr-2" %>
              <%= link_to "Edit", edit_author_path(author), class: "text-green-500 hover:underline mr-2" %>
              <%= link_to "Delete", author_path(author),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                  class: "text-red-500 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-gray-500">No authors yet. <%= link_to "Create one", new_author_path, class: "text-blue-500 hover:underline" %>!</p>
  <% end %>
</div>
