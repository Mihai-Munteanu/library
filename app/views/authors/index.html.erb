<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8">
  <!-- Header Section -->
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-6">
    <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900">Authors</h1>
    <%= link_to "New Author", new_author_path,
        class: "bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded text-center transition-colors shadow-md hover:shadow-lg" %>
  </div>

  <!-- Filters Section -->
  <div class="bg-white shadow-md rounded-lg px-4 sm:px-6 py-4 mb-6">
    <%= render "shared/filters",
        filter_fields: { name: "text", nationality: "text", gender: "select" },
        options: { gender: Author.genders.keys } %>
  </div>

  <!-- Authors Table -->
  <div id="authors-table-container">
    <%= render "authors_table" %>
  </div>
</div>
