<header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-50">
  <div class="container mx-auto px-5">
    <div class="flex items-center justify-between py-4">
      <h1 class="text-2xl font-bold text-gray-900">
        <%= link_to "Library", root_path, class: "hover:text-blue-600 transition-colors" %>
      </h1>
    </div>

    <!-- Navigation Tabs -->
    <nav class="-mb-px flex space-x-8" aria-label="Tabs">
      <%= link_to authors_path, class: "group inline-flex items-center py-4 px-1 border-b-2 font-medium text-sm #{nav_tab_class(authors_path)}" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        Authors
      <% end %>

      <%= link_to books_path, class: "group inline-flex items-center py-4 px-1 border-b-2 font-medium text-sm #{nav_tab_class(books_path)}" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        Books
      <% end %>

      <%= link_to members_path, class: "group inline-flex items-center py-4 px-1 border-b-2 font-medium text-sm #{nav_tab_class(members_path)}" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        Members
      <% end %>

      <%= link_to loans_path, class: "group inline-flex items-center py-4 px-1 border-b-2 font-medium text-sm #{nav_tab_class(loans_path)}" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
        </svg>
        Loans
      <% end %>
    </nav>
  </div>
</header>

