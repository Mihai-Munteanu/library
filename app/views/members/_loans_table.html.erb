<!-- Loans Table -->
<% loans = local_assigns[:loans] || @loans %>
<% pagy = local_assigns[:pagy] || @pagy %>

<% if loans.any? %>
  <div class="bg-white shadow-md rounded-lg overflow-hidden mb-6">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Book</th>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Start Date</th>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Due Date</th>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Return Date</th>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-4 sm:px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% loans.each do |loan| %>
            <tr id="<%= dom_id(loan) %>" class="hover:bg-gray-50 transition-colors">
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">
                  <%= link_to loan.book.title, book_path(loan.book), class: "text-blue-600 hover:text-blue-800 hover:underline" %>
                </div>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= format_date(loan.start_date) %></div>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= format_date(loan.due_date) %></div>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= format_date(loan.return_date) %></div>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= loan.status || "N/A" %></div>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex justify-end gap-2 flex-wrap">
                  <%= link_to "Show", loan_path(loan),
                      class: "text-blue-600 hover:text-blue-900 hover:underline transition-colors" %>
                  <%= link_to "Edit", edit_loan_path(loan),
                      class: "text-green-600 hover:text-green-900 hover:underline transition-colors" %>
                  <% if loan.borrowed? || loan.overdue? %>
                    <%
                      from_page = local_assigns[:from_page] || "member_show"
                      member = local_assigns[:member] || @member
                    %>
                    <%= button_to "Return",
                        return_loan_loan_path(loan, from_page: from_page),
                        method: :patch,
                        data: { turbo: true },
                        class: "text-purple-600 hover:text-purple-900 hover:underline transition-colors bg-transparent border-none p-0 cursor-pointer" %>
                  <% end %>
                  <%
                    # Determine context: if we're on member show page
                    from_page = local_assigns[:from_page] || "member_show"
                    member = local_assigns[:member] || @member
                    return_to_url = local_assigns[:return_to] || (member ? member_path(member) : loans_path)
                    delete_url = delete_confirmation_loan_path(loan) + "?from_page=#{from_page}&return_to=#{CGI.escape(return_to_url)}"
                  %>
                  <%= link_to "Delete", delete_url,
                      data: { turbo_frame: "modal" },
                      class: "text-red-600 hover:text-red-900 hover:underline transition-colors" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <% if pagy && pagy.pages > 1 %>
    <div id="loans-pagination" class="mt-6 flex justify-center">
      <%== pagy_nav(pagy) %>
    </div>
  <% end %>
<% else %>
  <!-- Empty State -->
  <div class="bg-white shadow-md rounded-lg px-6 py-12 text-center">
    <p class="text-gray-500 text-lg mb-4">No loans recorded for this member.</p>
  </div>
<% end %>

