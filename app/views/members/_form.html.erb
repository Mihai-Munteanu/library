<%= form_with(model: member, class: "contents") do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul class="list-disc ml-6">
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:name].none?, "border-red-400 focus:outline-red-600": member.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :email %>
    <%= form.text_field :email, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:email].none?, "border-red-400 focus:outline-red-600": member.errors[:email].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :birth_date %>
    <%= form.date_field :birth_date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:birth_date].none?, "border-red-400 focus:outline-red-600": member.errors[:birth_date].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :gender %>
    <%= form.select :gender, Member.genders.keys, { prompt: "Select gender" }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:gender].none?, "border-red-400 focus:outline-red-600": member.errors[:gender].any?}] %>
  </div>
  <div class="flex space-x-4 gap-2">
    <div class="my-5">
      <%= form.label :is_active, class: "inline-flex items-center" do %>
        <%= form.check_box :is_active, class: "mr-2" %>
        Is Active
      <% end %>
    </div>
    <div class="my-5">
        <%= form.label :is_vip, class: "inline-flex items-center" do %>
        <%= form.check_box :is_vip, class: "mr-2" %>
        Is VIP
      <% end %>
    </div>
    <div class="my-5">
      <%= form.label :is_admin, class: "inline-flex items-center" do %>
        <%= form.check_box :is_admin, class: "mr-2" %>
        Is Admin
      <% end %>
    </div>
  </div>
  <div class="my-5">
    <%= form.label :balance %>
    <%= form.number_field :balance, step: 0.01, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:balance].none?, "border-red-400 focus:outline-red-600": member.errors[:balance].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :total_spent %>
    <%= form.number_field :total_spent, step: 0.01, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:total_spent].none?, "border-red-400 focus:outline-red-600": member.errors[:total_spent].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :discount_rate %>
    <%= form.number_field :discount_rate, step: 0.01, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:discount_rate].none?, "border-red-400 focus:outline-red-600": member.errors[:discount_rate].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :points %>
    <%= form.number_field :points, step: 0.01, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:points].none?, "border-red-400 focus:outline-red-600": member.errors[:points].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :books_borrowed %>
    <%= form.number_field :books_borrowed, step: 0.01, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:books_borrowed].none?, "border-red-400 focus:outline-red-600": member.errors[:books_borrowed].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :books_returned %>
    <%= form.number_field :books_returned, step: 0.01, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:books_returned].none?, "border-red-400 focus:outline-red-600": member.errors[:books_returned].any?}] %>
  </div>
  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
