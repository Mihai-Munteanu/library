<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 text-red-700 p-4 rounded mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Basic Information Section -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b border-gray-200">Basic Information</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
      <div class="md:col-span-2">
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" do %>
          Title <span class="text-red-500">*</span>
        <% end %>
        <% title_has_error = book.errors[:title].any? || (book.errors.any? && book.title.blank?) %>
        <%= form.text_field :title,
            class: "w-full px-3 py-2 border #{title_has_error ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if book.errors[:title].any? %>
          <p class="mt-1 text-sm text-red-600"><%= book.errors[:title].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :isbn, class: "block text-sm font-medium text-gray-700 mb-2" do %>
          ISBN <span class="text-red-500">*</span>
        <% end %>
        <% isbn_has_error = book.errors[:isbn].any? || (book.errors.any? && book.isbn.blank?) %>
        <%= form.text_field :isbn,
            class: "w-full px-3 py-2 border #{isbn_has_error ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if book.errors[:isbn].any? %>
          <p class="mt-1 text-sm text-red-600"><%= book.errors[:isbn].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :author_id, class: "block text-sm font-medium text-gray-700 mb-2" do %>
          Author <span class="text-red-500">*</span>
        <% end %>
        <% author_id_has_error = book.errors[:author_id].any? || (book.errors.any? && book.author_id.blank?) %>
        <%= form.select :author_id,
            Author.all.map { |a| [a.name, a.id] },
            { prompt: "Select author", selected: book.author_id },
            { class: "w-full px-3 py-2 border #{author_id_has_error ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors bg-white" } %>
        <% if book.errors[:author_id].any? %>
          <p class="mt-1 text-sm text-red-600"><%= book.errors[:author_id].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :publication_date, class: "block text-sm font-medium text-gray-700 mb-2" do %>
          Publication Date <span class="text-red-500">*</span>
        <% end %>
        <% publication_date_has_error = book.errors[:publication_date].any? || (book.errors.any? && book.publication_date.blank?) %>
        <%= form.date_field :publication_date,
            class: "w-full px-3 py-2 border #{publication_date_has_error ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if book.errors[:publication_date].any? %>
          <p class="mt-1 text-sm text-red-600"><%= book.errors[:publication_date].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :copies_sold, class: "block text-sm font-medium text-gray-700 mb-2" do %>
          Copies Sold
        <% end %>
        <% copies_sold_has_error = book.errors[:copies_sold].any? || (book.errors.any? && book.copies_sold.blank?) %>
        <%= form.number_field :copies_sold,
            class: "w-full px-3 py-2 border #{copies_sold_has_error ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if book.errors[:copies_sold].any? %>
          <p class="mt-1 text-sm text-red-600"><%= book.errors[:copies_sold].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :price, class: "block text-sm font-medium text-gray-700 mb-2" do %>
          Price <span class="text-red-500">*</span>
        <% end %>
        <% price_has_error = book.errors[:price].any? || (book.errors.any? && book.price.blank?) %>
        <%= form.number_field :price, step: 0.01,
            class: "w-full px-3 py-2 border #{price_has_error ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if book.errors[:price].any? %>
          <p class="mt-1 text-sm text-red-600"><%= book.errors[:price].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :pages, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :pages,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors #{'border-red-500' if book.errors[:pages].any?}" %>
        <% if book.errors[:pages].any? %>
          <p class="mt-1 text-sm text-red-600"><%= book.errors[:pages].first %></p>
        <% end %>
      </div>

      <div class="md:col-span-2">
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :description, rows: 5,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition-colors #{'border-red-500' if book.errors[:description].any?}" %>
        <% if book.errors[:description].any? %>
          <p class="mt-1 text-sm text-red-600"><%= book.errors[:description].first %></p>
        <% else %>
          <p class="mt-1 text-sm text-gray-500">Maximum 1000 characters</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex flex-col sm:flex-row items-center justify-between gap-4 pt-6 border-t border-gray-200">
    <p class="text-sm text-gray-500">
      <span class="text-red-500">*</span> Required fields
    </p>
    <div class="flex gap-3 w-full sm:w-auto">
      <%= back_button_with_fallback(books_path, text: "Cancel", class: "w-full sm:w-auto") %>
      <%= form.submit class: "w-full sm:w-auto bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded transition-colors shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
    </div>
  </div>
<% end %>
