<% content_for :title, "Books" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
</div>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Books</h1>
    <%= link_to "New Book", new_book_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if @books.any? %>
    <table class="min-w-full bg-white border border-gray-300">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-4 py-2 border-b">Title</th>
          <th class="px-4 py-2 border-b">ISBN</th>
          <th class="px-4 py-2 border-b">Description</th>
          <th class="px-4 py-2 border-b">Publication Date</th>
          <th class="px-4 py-2 border-b">Copies Sold</th>
          <th class="px-4 py-2 border-b">Price</th>
          <th class="px-4 py-2 border-b">Pages</th>
          <th class="px-4 py-2 border-b">Author</th>
          <th class="px-4 py-2 border-b">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr id="book_<%= book.id %>">
            <td class="px-4 py-2 border-b"><%= book.title %></td>
            <td class="px-4 py-2 border-b"><%= book.isbn %></td>
            <td class="px-4 py-2 border-b"><%= book.description %></td>
            <td class="px-4 py-2 border-b"><%= book.publication_date %></td>
            <td class="px-4 py-2 border-b"><%= book.copies_sold %></td>
            <td class="px-4 py-2 border-b"><%= book.price %></td>
            <td class="px-4 py-2 border-b"><%= book.pages %></td>
            <td class="px-4 py-2 border-b"><%= link_to book.author.name, author_path(book.author) %></td>
            <td class="px-4 py-2 border-b">
              <%= link_to "Show", book, class: "text-blue-500 hover:underline mr-2" %>
              <%= link_to "Edit", edit_book_path(book), class: "text-green-500 hover:underline mr-2" %>
              <%= link_to "Delete", book_path(book),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                  class: "text-red-500 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-gray-500">No books yet. <%= link_to "Create one", new_book_path, class: "text-blue-500 hover:underline" %>!</p>
  <% end %>
</div>
