<!-- Books Table -->
<% if @books.any? %>
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Cover
            </th>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sortable_column(:title, "Title", books_path) %>
            </th>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sortable_column(:isbn, "ISBN", books_path) %>
            </th>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Author
            </th>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sortable_column(:publication_date, "Publication Date", books_path) %>
            </th>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sortable_column(:price, "Price", books_path) %>
            </th>
            <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sortable_column(:status, "Status", books_path) %>
            </th>
            <th class="px-4 sm:px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @books.each do |book| %>
            <tr id="<%= dom_id(book) %>" class="hover:bg-gray-50 transition-colors">
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <% if book.cover.attached? %>
                  <%= image_tag book.cover, class: "h-16 w-auto object-contain rounded shadow-sm border border-gray-200" %>
                <% else %>
                  <div class="h-16 w-20 bg-gray-200 rounded flex items-center justify-center text-gray-400 text-xs px-1">
                    No Cover
                  </div>
                <% end %>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= book.title %></div>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= book.isbn || "N/A" %></div>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= link_to book.author.name, author_path(book.author), class: "text-blue-600 hover:text-blue-900 hover:underline transition-colors" %>
                </div>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= book.publication_date || "N/A" %></div>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">$<%= sprintf("%.2f", book.price) if book.price %></div>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                <% if book.on_loan? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    On Loan
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Available
                  </span>
                <% end %>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex justify-end gap-2">
                  <%= link_to "Show", book,
                      class: "text-blue-600 hover:text-blue-900 hover:underline transition-colors" %>
                  <%= link_to "Edit", edit_book_path(book),
                      class: "text-green-600 hover:text-green-900 hover:underline transition-colors" %>
                  <%= link_to "Delete",
                      delete_confirmation_book_path(book) + "?from_page=index&return_to=#{CGI.escape(books_index_url_with_filters)}",
                      data: { turbo_frame: "modal" },
                      class: "text-red-600 hover:text-red-900 hover:underline transition-colors" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <% if @pagy && @pagy.pages > 1 %>
    <div id="books-pagination" class="mt-6 flex justify-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% else %>
    <div id="books-pagination"></div>
  <% end %>
<% else %>
  <!-- Empty State -->
  <div class="bg-white shadow-md rounded-lg px-6 py-12 text-center">
    <p class="text-gray-500 text-lg mb-4">No books found.</p>
    <%= link_to "Create your first book", new_book_path,
        class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded transition-colors shadow-md hover:shadow-lg" %>
  </div>
  <div id="books-pagination"></div>
<% end %>

