<% content_for :title, "Dashboard" %>

<div class="w-full">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-2">Library Dashboard</h1>
    <p class="text-gray-600">Manage your library resources</p>
  </div>

  <!-- Dashboard Content Area -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-500">Total Books</p>
      <p class="mt-2 text-3xl font-semibold text-gray-900"><%= number_with_delimiter(@total_books) %></p>
    </div>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-500">Total Members</p>
      <p class="mt-2 text-3xl font-semibold text-gray-900"><%= number_with_delimiter(@total_members) %></p>
    </div>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-500">Total Authors</p>
      <p class="mt-2 text-3xl font-semibold text-gray-900"><%= number_with_delimiter(@total_authors) %></p>
    </div>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-500">Active Loans</p>
      <p class="mt-2 text-3xl font-semibold text-gray-900"><%= number_with_delimiter(@active_loans) %></p>
    </div>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-500">Overdue Loans</p>
      <p class="mt-2 text-3xl font-semibold text-gray-900"><%= number_with_delimiter(@overdue_loans) %></p>
    </div>
  </div>
</div>
