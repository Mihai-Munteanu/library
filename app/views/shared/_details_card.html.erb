<%
  # Extract configuration from locals
  title = local_assigns.fetch(:title, "Details")
  fields = local_assigns.fetch(:fields, [])
  grid_cols = local_assigns.fetch(:grid_cols, "grid-cols-1 sm:grid-cols-2 lg:grid-cols-3")
%>
<div class="bg-white shadow-md rounded-lg px-4 sm:px-6 lg:px-8 pt-6 pb-8 mb-6">
  <h2 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b border-gray-200"><%= title %></h2>
  <dl class="grid <%= grid_cols %> gap-4 sm:gap-6">
    <% fields.each do |field| %>
      <div class="<%= field[:col_span] || 'sm:col-span-1' %>">
        <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-1"><%= field[:label] %></dt>
        <dd class="<%= field[:value_class] || 'text-base sm:text-lg text-gray-900' %>">
          <%= field[:value].html_safe %>
        </dd>
      </div>
    <% end %>
  </dl>
</div>

