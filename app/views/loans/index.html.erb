<% content_for :title, "Loans" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Loans</h1>
    <%= link_to "New loan", new_loan_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <%= render "shared/filters",
      filter_fields: { member_id: "select", book_id: "select", status: "select" },
      options: {
        member_id: Member.all.map { |m| [m.name, m.id] },
        book_id: Book.all.map { |b| [b.title, b.id] },
        status: Loan.statuses.keys.map(&:to_s)
      } %>

  <div id="loans" class="min-w-full divide-y divide-gray-200 space-y-5 mt-8">
    <% if @loans.any? %>
      <table class="min-w-full bg-white border border-gray-300">
        <thead class="bg-gray-100">
          <tr>
            <th class="px-4 py-2 border-b">Member</th>
            <th class="px-4 py-2 border-b">Book</th>
            <th class="px-4 py-2 border-b"><%= sortable_column(:start_date, "Start Date") %></th>
            <th class="px-4 py-2 border-b"><%= sortable_column(:due_date, "Due Date") %></th>
            <th class="px-4 py-2 border-b"><%= sortable_column(:return_date, "Return Date") %></th>
            <th class="px-4 py-2 border-b">Status</th>
            <th class="px-4 py-2 border-b">Notes</th>
            <th class="px-4 py-2 border-b">Metadata</th>
            <th class="px-4 py-2 border-b">Paused Start Time</th>
            <th class="px-4 py-2 border-b">Paused End Time</th>
            <th class="px-4 py-2 border-b">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @loans.each do |loan| %>
            <tr id="loan_<%= loan.id %>">
              <td class="px-4 py-2 border-b"><%= loan.member.name %></td>
              <td class="px-4 py-2 border-b"><%= loan.book.title %></td>
              <td class="px-4 py-2 border-b"><%= loan.start_date %></td>
              <td class="px-4 py-2 border-b"><%= loan.due_date %></td>
              <td class="px-4 py-2 border-b"><%= loan.return_date %></td>
              <td class="px-4 py-2 border-b"><%= loan.status %></td>
              <td class="px-4 py-2 border-b"><%= loan.notes %></td>
              <td class="px-4 py-2 border-b"><%= loan.metadata %></td>
              <td class="px-4 py-2 border-b"><%= loan.paused_start_time %></td>
              <td class="px-4 py-2 border-b"><%= loan.paused_end_time %></td>
              <td class="px-4 py-2 border-b">
                <%= link_to "Show", loan, class: "text-blue-500 hover:underline mr-2" %>
                <%= link_to "Edit", edit_loan_path(loan), class: "text-green-500 hover:underline mr-2" %>
                <%= link_to "Delete", loan_path(loan), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% if @pagy && @pagy.pages > 1 %>
        <div class="mt-6 flex justify-center">
          <%== @pagy.series_nav %>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-500">No loans yet. <%= link_to "Create one", new_loan_path, class: "text-blue-500 hover:underline" %>!</p>
    <% end %>
  </div>
</div>
